{
    "name": "sircoolmind/laravel-ai-translation",
    "description": "AI Translation Tool for Laravel using Gemini",
    "type": "library",
    "homepage": "https://github.com/sircoolmind/laravel-ai-translation",
    "license": "MIT",
    "authors": [
        {
            "name": "SirCoolMind",
            "email": "hafizcoolman@gmail.com"
        }
    ],
    "keywords": [
        "sircoolmind",
        "laravel",
        "laravel-ai-translation"
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.15.0",
        "illuminate/contracts": "^10.0",
        "spatie/laravel-permission": "^5.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "SirCoolMind\\AiTranslation\\": "src/",
            "SirCoolMind\\AiTranslation\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SirCoolMind\\AiTranslation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SirCoolMind\\AiTranslation\\AiTranslationServiceProvider"
            ],
            "aliases": {
                "LAT": "SirCoolMind\\AiTranslation\\Facades\\LAT"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
